<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000" android:text="Tic-Tac-Toe" android:textSize="20sp" android:textStyle="bold" android:layout_gravity="center_horizontal"
        android:gravity="center"
            android:layout_marginTop="10sp"/>


        <ScrollView android:id="@+id/ScrollView01"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:layout_alignParentBottom="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="#fff" android:id="@+id/StatList" android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"></LinearLayout>
    </ScrollView>

    </RelativeLayout>


</LinearLayout>
